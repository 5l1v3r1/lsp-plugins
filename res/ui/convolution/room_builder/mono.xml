<plugin resizable="false">
	<hbox spacing="4">
		<!-- IR editor -->
		<cgroup id="view">
			<vbox>
				<viewer3d
					id="ifn" status_id="ifs" width="320" height="200"
					xpos_id="cposx" ypos_id="cposy" zpos_id="cposz"
					yaw_id="cyaw" pitch_id="cpitch"
				>
					<ui:for id="i" first="0" last="7" >
						<capture3d
							visibility=":sce_${i}" 
							mode_id="sccf_${i}"
							hue_id="sch_${i}" hue_shift="0.1"
							xpos_id="scpx_${i}" ypos_id="scpy_${i}" zpos_id="scpz_${i}"
							yaw_id="scay_${i}" pitch_id="scap_${i}" roll_id="scar_${i}"
							size_id="sccs_${i}" angle_id="sca_${i}" distance_id="scab_${i}"
						/>
					</ui:for>
				</viewer3d>
				<!--  yaw_id="cyaw" pitch_id="cpitch" -->
				<grid rows="4" cols="7">
					<label text="3D model" />
					<cell rows="4"><vsep /></cell>
					<cell cols="5"><label text="Camera" /></cell>
					
					<cell rows="3">
						<load size="48" id="ifn" format="obj3d" status_id="ifs" progress_id="ifp" path_id="ui:dlg_model3d_path" />
					</cell>
					
					<label text="X Axis" />
					<label text="Y Axis" />
					<label text="Z Axis" />
					<label text="Yaw" />
					<label text="Pitch" />
					
					<knob id="cposx" size="24" scale_color="red" />
					<knob id="cposy" size="24" scale_color="green" />
					<knob id="cposz" size="24" scale_color="blue" />
					<knob id="cyaw" size="24" />
					<knob id="cpitch" size="24" />
					
					<value id="cposx" same_line="true" />
					<value id="cposy" same_line="true" />
					<value id="cposz" same_line="true" />
					<value id="cyaw" same_line="true" />
					<value id="cpitch" same_line="true" />
				</grid>
			</vbox>
		</cgroup>
		<group text="Captures">
			<vbox>
				<!-- Capture selector -->
				<align hpos="-1">
					<hbox spacing="8">
						<label text="Capture:" />
						<combo id="csel" width="20" />
						<button id="sce[csel]" size="16" led="true" color="red" hue_id="sch[csel]" />
						<label text="Enabled" />
					</hbox>
				</align>
				<hsep pad_bottom="8" />
				<!-- Captures -->
				<ui:for id="i" first="0" last="7" >
					<vbox visibility=":csel ieq ${i}" spacing="2">
						<grid rows="4" cols="2" transpose="true" vspacing="2" hspacing="2" >
							<align pad_left="8" hpos="-1"><label text="Mode" /></align>
							<align pad_left="8" hpos="-1"><label text="Reflections" /></align>
							<align pad_left="8" hpos="-1"><label text="Mic. direction" /></align>
							<align pad_left="8" hpos="-1" visibility="(:sccf_${i} ieq 4)" ><label text="Side direction" /></align>
							
							<combo id="sccf_${i}" />
							<hbox spacing="2">
								<combo id="scf_${i}" />
								<label text=" - " />
								<combo id="scl_${i}" />
							</hbox>
							<combo id="scmd_${i}" />
							<combo id="scsd_${i}" visibility="(:sccf_${i} ieq 4)" />
						</grid>
						
						<hsep />
						<grid rows="3" cols="3">
							<label text="X Axis" />
							<label text="Y Axis" />
							<label text="Z Axis" />
							
							<knob id="scpx_${i}" size="16" scale_hue_id="sch_${i}" />
							<knob id="scpy_${i}" size="16" scale_hue_id="sch_${i}" />
							<knob id="scpz_${i}" size="16" scale_hue_id="sch_${i}" />
							
							<value id="scpx_${i}" same_line="true" />
							<value id="scpy_${i}" same_line="true" />
							<value id="scpz_${i}" same_line="true" />
						</grid>
						
						<hsep />
						<grid rows="3" cols="3">
							<label text="Yaw" />
							<label text="Pitch" />
							<label text="Roll" />
							
							<knob id="scay_${i}" size="16" scale_hue_id="sch_${i}" />
							<knob id="scap_${i}" size="16" scale_hue_id="sch_${i}" />
							<knob id="scar_${i}" size="16" scale_hue_id="sch_${i}" />
							
							<value id="scay_${i}" same_line="true" />
							<value id="scap_${i}" same_line="true" />
							<value id="scar_${i}" same_line="true" />
						</grid>
						
						<hsep />
						<hbox>
							<vbox>
								<label text="Hue" />
								<knob id="sch_${i}" size="16" scale_hue_id="sch_${i}" />
								<value id="sch_${i}" same_line="true" />
							</vbox>
							<vbox>
								<label text="Capsule" />
								<knob id="sccs_${i}" size="16" scale_hue_id="sch_${i}" />
								<value id="sccs_${i}" same_line="true" />
							</vbox>
							<vbox visibility="(:sccf_${i} ieq 1) or (:sccf_${i} ieq 3)" >
								<label text="Angle" />
								<knob id="sca_${i}" size="16" scale_hue_id="sch_${i}" balance="90" />
								<value id="sca_${i}" same_line="true"/>
							</vbox>
							<vbox visibility="(:sccf_${i} ieq 2)" >
								<label text="Distance" />
								<knob id="scab_${i}" size="16" scale_hue_id="sch_${i}" />
								<value id="scab_${i}" same_line="true" />
							</vbox>
						</hbox>
					</vbox>
				</ui:for>
			</vbox>
		</group>
	</hbox>
</plugin>