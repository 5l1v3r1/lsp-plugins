<plugin resizable="false">
	<grid rows="3" cols="2" transpose="true" hspacing="4" vspacing="4">
		<graph width="640" height="360" expand="true" fill="true">
			<center hpos="-1" vpos="-1" visible="false" />
			
			<!-- Gray grid -->
			<ui:for id="f" first="20" last="90" step="10"><marker value="${f}" color="gray" basis="0" parallel="1" /></ui:for>
			<ui:for id="f" first="200" last="900" step="100"><marker value="${f}" color="gray" basis="0" parallel="1" /></ui:for>
			<ui:for id="f" first="2000" last="9000" step="1000"><marker value="${f}" color="gray" basis="0" parallel="1" /></ui:for>
			<marker value="20000" color="gray" basis="0" parallel="1" />
			
			<marker value="3.98107" color="gray" basis="1" parallel="0" /> <!-- +12 dB -->
			<marker value="0.251189" color="gray" basis="1" parallel="0" /> <!-- -12 dB -->
			<marker value="0.0158489" color="gray" basis="1" parallel="0" /> <!-- -36 dB -->
			<marker value="0.001" color="gray" basis="1" parallel="0" /> <!-- -60 dB -->

			<!-- Yellow grid -->
			<marker value="100" color="yellow" basis="0" parallel="1" /> <!-- 100 Hz -->
			<marker value="1000" color="yellow" basis="0" parallel="1" /> <!-- 1 kHz -->
			<marker value="10000" color="yellow" basis="0" parallel="1" /> <!-- 10 kHz -->

			<marker value="1" color="yellow" basis="1" parallel="0" /> <!-- 0 dB -->
			<marker value="0.0630957" color="yellow" basis="1" parallel="0" /> <!-- -24 dB -->
			<marker value="0.00398107" color="yellow" basis="1" parallel="0" /> <!-- -48 dB -->

			<!-- Meshes -->
			<ui:for id="i" first="0" last="15"><mesh id="spc_${i}" width="3" visibility_id="on_${i}" hue_id="hue_${i}" /></ui:for>
			
			<!-- Boundaries -->
			<marker value="15.8489" color="white" basis="1" parallel="0" /> <!-- +24 dB -->
			<marker value="24000" color="white" basis="0" parallel="1" />
			
			<!-- Axis -->
			<axis id="freq" color="white" angle="0.0" logarithmic="true" />
			<axis min="0.000251189" max="15.8489" color="white" angle="0.5" logarithmic="true" />
			
			<!-- Marker -->
			<marker id="freq" color="red" basis="0" parallel="1" />
			<marker id="lvl" color="red" basis="1" parallel="0" />
			
			<!-- Text -->
			<text text="Hz" coord="10;2.51e-4" halign="1" valign="1" />
			<text text="100" coord="100;2.51e-4" halign="1" valign="1" />
			<text text="1K" coord="1000;2.51e-4" halign="1" valign="1" />
			<text text="10K" coord="10000;2.51e-4" halign="1" valign="1" />
			
			<text text="+12" coord="10;3.98107" halign="1" valign="-1" />
			<text text="0" coord="10;1" halign="1" valign="1" />
			<text text="-12" coord="10;0.251189" halign="1" valign="1" />
			<text text="-24" coord="10;0.0630957" halign="1" valign="1" />
			<text text="-36" coord="10;0.0158489" halign="1" valign="1" />
			<text text="-48" coord="10;0.00398107" halign="1" valign="1" />
			<text text="-60" coord="10;0.001" halign="1" valign="1" />
			<text text="dB" coord="10;15.8489" halign="1" valign="-1" />
		</graph>
		<hbox spacing="8">
			<align pad_right="4" fill="true" hpos="0"><label text="FREQUENCY GRAPH" /></align>
			<label text="Window" />
			<combo id="wnd" />
			<label text="Tolerance" />
			<combo id="tol" />
			<label text="Envelope" />
			<combo id="env" />
		</hbox>
		<cell cols="2">
			<group text="Channels" expand="true">
				<grid rows="7" cols="17" transpose="true">
					<label text="#" />
					<label text="On" />
					<label text="Solo/Hold" />
					<label text="Hue" />
					<label />
					<label text="Shift" />
					<label test="(dB)" />
					
					<ui:for id="i" first="0" last="15">
						<label text="${i}" />
						<button id="on_${i}" size="16" color="red" led="true" hue_id="hue_${i}" />
						
						<grid rows="2" cols="2" fill="false">
							<button id="solo_${i}" size="12" color="red" led="true" hue_id="hue_${i}" />
							<button id="frz_${i}" size="12" color="red" led="true" hue_id="hue_${i}" />
							<label text="S" font_size="8" />
							<label text="H" font_size="8" />
						</grid> 
						
						<knob id="hue_${i}" scale_hue_id="hue_${i}" size="20" />
						<value id="hue_${i}" detailed="false" />
						<knob id="sh_${i}" scale_hue_id="hue_${i}" size="20" />
						<value id="sh_${i}" detailed="false" />
					</ui:for>
				</grid>
			</group>
		</cell>
		<cell rows="2">
			<group text="Metering" expand="true">
				<grid rows="15" cols="1" expand="true">
					<label text="Preamp" />
					<knob id="pamp" />
					<value id="pamp" same_line="true" />
					
					<label text="Reactivity" />
					<knob id="react" />
					<value id="react" same_line="true" />
					
					<label text="Channel" />
					<combo id="chn" width="48" />
					
					<label text="Selector" />
					<knob id="sel" />
					<value id="sel" same_line="true" />
					
					<label text="Frequency (Hz)" />
					<indicator id="freq" format="f6.1!" text_color="green" />
					<label text="Level (dB)" />
					<indicator id="lvl" format="+-f4.1!" text_color="green" />
				</grid>
			</group>
		</cell>
	</grid>
</plugin>