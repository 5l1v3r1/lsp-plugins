<plugin width="800" height="128" resizable="false">
	<hbox>
		<align pad_left="8" pad_right="8">
			<vbox size="3">
				<label text="Bypass" />
				<switch id="bypass" size="24" angle="1" />
				<led id="bypass" color="green" size="8" />
			</vbox>
		</align>
		
		<vbox size="2" border="2">
			<graph width="512" expand="true" fill="true">
				<center hpos="-1" vpos="-1" visible="false" />
				
				<!-- Gray grid -->
				<marker value="20" color="gray" basis="0" parallel="1" />
				<marker value="30" color="gray" basis="0" parallel="1" />
				<marker value="40" color="gray" basis="0" parallel="1" />
				<marker value="50" color="gray" basis="0" parallel="1" />
				<marker value="60" color="gray" basis="0" parallel="1" />
				<marker value="70" color="gray" basis="0" parallel="1" />
				<marker value="80" color="gray" basis="0" parallel="1" />
				<marker value="90" color="gray" basis="0" parallel="1" />
				
				<marker value="200" color="gray" basis="0" parallel="1" />
				<marker value="300" color="gray" basis="0" parallel="1" />
				<marker value="400" color="gray" basis="0" parallel="1" />
				<marker value="500" color="gray" basis="0" parallel="1" />
				<marker value="600" color="gray" basis="0" parallel="1" />
				<marker value="700" color="gray" basis="0" parallel="1" />
				<marker value="800" color="gray" basis="0" parallel="1" />
				<marker value="900" color="gray" basis="0" parallel="1" />
				
				<marker value="2000" color="gray" basis="0" parallel="1" />
				<marker value="3000" color="gray" basis="0" parallel="1" />
				<marker value="4000" color="gray" basis="0" parallel="1" />
				<marker value="5000" color="gray" basis="0" parallel="1" />
				<marker value="6000" color="gray" basis="0" parallel="1" />
				<marker value="7000" color="gray" basis="0" parallel="1" />
				<marker value="8000" color="gray" basis="0" parallel="1" />
				<marker value="9000" color="gray" basis="0" parallel="1" />
				
				<marker value="20000" color="gray" basis="0" parallel="1" />
				
				<marker value="3.98107" color="gray" basis="1" parallel="0" /> <!-- +12 dB -->
				<marker value="0.251189" color="gray" basis="1" parallel="0" /> <!-- -12 dB -->
				<marker value="0.0158489" color="gray" basis="1" parallel="0" /> <!-- -36 dB -->
				<marker value="0.001" color="gray" basis="1" parallel="0" /> <!-- -60 dB -->

				<!-- Yellow grid -->
				<marker value="100" color="yellow" basis="0" parallel="1" /> <!-- 100 Hz -->
				<marker value="1000" color="yellow" basis="0" parallel="1" /> <!-- 1 kHz -->
				<marker value="10000" color="yellow" basis="0" parallel="1" /> <!-- 10 kHz -->

				<marker value="1" color="yellow" basis="1" parallel="0" /> <!-- 0 dB -->
				<marker value="0.0630957" color="yellow" basis="1" parallel="0" /> <!-- -24 dB -->
				<marker value="0.00398107" color="yellow" basis="1" parallel="0" /> <!-- -48 dB -->

				<!-- Meshes -->
				<mesh id="spc_0" width="3" visibility="on_0" hue_id="hue_0" />
				<mesh id="spc_1" width="3" visibility="on_1" hue_id="hue_1" />
				
				<!-- Boundaries -->
				<marker value="15.8489" color="white" basis="1" parallel="0" /> <!-- +24 dB -->
				<marker value="24000" color="white" basis="0" parallel="1" />
				
				<!-- Axis -->
				<axis id="freq" color="white" angle="0.0" logarithmic="true" />
				<axis min="0.000251189" max="15.8489" color="white" angle="0.5" logarithmic="true" />
				
				<!-- Marker -->
				<marker id="freq" color="red" basis="0" parallel="1" />
				<marker id="lvl" color="red" basis="1" parallel="0" />
				
				<!-- Text -->
				<text text="Hz" coord="10;2.51e-4" halign="1" valign="1" />
				<text text="100" coord="100;2.51e-4" halign="1" valign="1" />
				<text text="1K" coord="1000;2.51e-4" halign="1" valign="1" />
				<text text="10K" coord="10000;2.51e-4" halign="1" valign="1" />
				
				<text text="+12" coord="10;3.98107" halign="1" valign="-1" />
				<text text="0" coord="10;1" halign="1" valign="1" />
				<text text="-12" coord="10;0.251189" halign="1" valign="1" />
				<text text="-24" coord="10;0.0630957" halign="1" valign="1" />
				<text text="-36" coord="10;0.0158489" halign="1" valign="1" />
				<text text="-48" coord="10;0.00398107" halign="1" valign="1" />
				<text text="-60" coord="10;0.001" halign="1" valign="1" />
				<text text="dB" coord="10;15.8489" halign="1" valign="-1" />
			</graph>
			<label text="FREQUENCY GRAPH" />
		</vbox>
	
		<vbox>
			<hbox>
				<group text="Channel 0" expand="true">
					<grid rows="3" cols="5">
						<label text="On" />
						<label text="Solo" />
						<label text="Hold" />
						<label text="Hue" />
						<label text="Shift" />
						
						<button id="on_0" size="16" />
						<button id="solo_0" size="16" />
						<button id="frz_0" size="16" />
						<knob id="hue_0" scale_hue_id="hue_0" size="20" />
						<knob id="sh_0" scale_hue_id="hue_0" size="20" />
						
						<vbox><led id="on_0" size="6" hue_id="hue_0" /><label /></vbox>
						<vbox><led id="solo_0" size="6" hue_id="hue_0" /><label /></vbox>
						<vbox><led id="frz_0" size="6" hue_id="hue_0" /><label /></vbox>
						<value id="hue_0" />
						<value id="sh_0" />
					</grid>
				</group>
				<group text="Channel 1" expand="true">
					<grid rows="3" cols="5">
						<label text="On" />
						<label text="Solo" />
						<label text="Hold" />
						<label text="Hue" />
						<label text="Shift" />
						
						<button id="on_1" size="16" />
						<button id="solo_1" size="16" />
						<button id="frz_1" size="16" />
						<knob id="hue_1" scale_hue_id="hue_1" size="20" />
						<knob id="sh_1" scale_hue_id="hue_1" size="20" />
						
						<vbox><led id="on_1" size="6" hue_id="hue_1" /><label /></vbox>
						<vbox><led id="solo_1" size="6" hue_id="hue_1" /><label /></vbox>
						<vbox><led id="frz_1" size="6" hue_id="hue_1" /><label /></vbox>
						<value id="hue_1" />
						<value id="sh_1" />
					</grid>
				</group>
			</hbox>
				
			<group text="Metering">
				<vbox>
					<grid rows="5" cols="3">
						<label text="Channel" />
						<label text="Frequency (Hz)" />
						<label text="Level (dB)" />
						
						<combo id="chn" width="48" />
						<indicator id="freq" format="f6.1!" text_color="green" />
						<indicator id="lvl" format="+-f4.1!" text_color="green" />
					
						<label text="Preamp" />
						<label text="Selector" />
						<label text="Reactivity" />
						
						<knob id="pamp" />
						<knob id="sel" />
						<knob id="react" />
						
						<value id="pamp" />
						<value id="sel" />
						<value id="react" />
					</grid>
				</vbox>
			</group>

			<group text="Spectrum">
				<grid rows="2" cols="3" hspacing="1" vspacing="1">
					<label text="Window" />
					<label text="Tolerance" />
					<label text="Envelope" />
					
					<combo id="wnd" />
					<combo id="tol" />
					<combo id="env" />
				</grid>
			</group>
		</vbox>

	</hbox>
</plugin>