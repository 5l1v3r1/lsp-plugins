<plugin resizable="false">
	<vbox spacing="4">
		<hbox>
			<vbox>
				<align expand="true" pad_bottom="4">
					<graph width="640" height="340" expand="true" fill="true">
						<center hpos="-1" vpos="-1" visible="false" />
						
						<!-- Gray grid -->
						<ui:for id="f" first="20" last="90" step="10"><marker value="${f}" color="gray" basis="0" parallel="1" /></ui:for>
						<ui:for id="f" first="200" last="900" step="100"><marker value="${f}" color="gray" basis="0" parallel="1" /></ui:for>
						<ui:for id="f" first="2000" last="9000" step="1000"><marker value="${f}" color="gray" basis="0" parallel="1" /></ui:for>
						<marker value="20000" color="gray" basis="0" parallel="1" />
						
						<marker value="63.09575" color="gray" basis="1" parallel="0" /> <!-- +36 dB -->
						<marker value="3.98107" color="gray" basis="1" parallel="0" /> <!-- +12 dB -->
						<marker value="0.25119" color="gray" basis="1" parallel="0" /> <!-- -12 dB -->
						<marker value="0.01585" color="gray" basis="1" parallel="0" /> <!-- -36 dB -->
						
						<!-- Yellow grid -->
						<marker value="100" color="yellow" basis="0" parallel="1" /> <!-- 100 Hz -->
						<marker value="1000" color="yellow" basis="0" parallel="1" /> <!-- 1 kHz -->
						<marker value="10000" color="yellow" basis="0" parallel="1" /> <!-- 10 kHz -->
		
						<marker value="15.84893" color="yellow" basis="1" parallel="0" /> <!-- 24 dB -->
						<marker value="1" color="white" basis="1" parallel="0" /> <!-- 0 dB -->
						<marker value="0.06310" color="yellow" basis="1" parallel="0" /> <!-- -24 dB -->
		
						<!-- Amplitude graph -->
						<mesh id="fftg" width="2" color="middle_channel" />
						<mesh id="ag" width="3" color="middle_channel" fill="0.8" smooth="true" />
						
						<!-- Dots -->
						<dot hpos="16" vpos_id="g_0" visibility_id="fv_0" editable="true" color="middle_channel" />
						<dot hpos="20" vpos_id="g_1" visibility_id="fv_1" editable="true" color="middle_channel" />
						<dot hpos="25" vpos_id="g_2" visibility_id="fv_2" editable="true" color="middle_channel" />
						<dot hpos="31.5" vpos_id="g_3" visibility_id="fv_3" editable="true" color="middle_channel" />
						<dot hpos="40" vpos_id="g_4" visibility_id="fv_4" editable="true" color="middle_channel" />
						<dot hpos="50" vpos_id="g_5" visibility_id="fv_5" editable="true" color="middle_channel" />
						<dot hpos="63" vpos_id="g_6" visibility_id="fv_6" editable="true" color="middle_channel" />
						<dot hpos="80" vpos_id="g_7" visibility_id="fv_7" editable="true" color="middle_channel" />
						<dot hpos="100" vpos_id="g_8" visibility_id="fv_8" editable="true" color="middle_channel" />
						<dot hpos="125" vpos_id="g_9" visibility_id="fv_9" editable="true" color="middle_channel" />
						<dot hpos="160" vpos_id="g_10" visibility_id="fv_10" editable="true" color="middle_channel" />
						<dot hpos="200" vpos_id="g_11" visibility_id="fv_11" editable="true" color="middle_channel" />
						<dot hpos="250" vpos_id="g_12" visibility_id="fv_12" editable="true" color="middle_channel" />
						<dot hpos="315" vpos_id="g_13" visibility_id="fv_13" editable="true" color="middle_channel" />
						<dot hpos="400" vpos_id="g_14" visibility_id="fv_14" editable="true" color="middle_channel" />
						<dot hpos="500" vpos_id="g_15" visibility_id="fv_15" editable="true" color="middle_channel" />
						<dot hpos="630" vpos_id="g_16" visibility_id="fv_16" editable="true" color="middle_channel" />
						<dot hpos="800" vpos_id="g_17" visibility_id="fv_17" editable="true" color="middle_channel" />
						<dot hpos="1000" vpos_id="g_18" visibility_id="fv_18" editable="true" color="middle_channel" />
						<dot hpos="1250" vpos_id="g_19" visibility_id="fv_19" editable="true" color="middle_channel" />
						<dot hpos="1600" vpos_id="g_20" visibility_id="fv_20" editable="true" color="middle_channel" />
						<dot hpos="2000" vpos_id="g_21" visibility_id="fv_21" editable="true" color="middle_channel" />
						<dot hpos="2500" vpos_id="g_22" visibility_id="fv_22" editable="true" color="middle_channel" />
						<dot hpos="3150" vpos_id="g_23" visibility_id="fv_23" editable="true" color="middle_channel" />
						<dot hpos="4000" vpos_id="g_24" visibility_id="fv_24" editable="true" color="middle_channel" />
						<dot hpos="5000" vpos_id="g_25" visibility_id="fv_25" editable="true" color="middle_channel" />
						<dot hpos="6300" vpos_id="g_26" visibility_id="fv_26" editable="true" color="middle_channel" />
						<dot hpos="8000" vpos_id="g_27" visibility_id="fv_27" editable="true" color="middle_channel" />
						<dot hpos="10000" vpos_id="g_28" visibility_id="fv_28" editable="true" color="middle_channel" />
						<dot hpos="12500" vpos_id="g_29" visibility_id="fv_29" editable="true" color="middle_channel" />
						<dot hpos="16000" vpos_id="g_30" visibility_id="fv_30" editable="true" color="middle_channel" />
						<dot hpos="20000" vpos_id="g_31" visibility_id="fv_31" editable="true" color="middle_channel" />
						
						<!-- Boundaries -->
						<marker value="251.18861" color="white" basis="1" parallel="0" /> <!-- +48 dB -->
						<marker value="24000" color="white" basis="0" parallel="1" />
						
						<!-- Axis -->
						<axis min="10" max="24000" color="white" angle="0.0" logarithmic="true" />
						<axis min="0.00398" max="251.18861" color="white" angle="0.5" logarithmic="true" /> <!-- -48..+48 dB -->
						
						<!-- Text -->
						<text text="Hz" coord="10;0.00398" halign="1" valign="1" />
						<text text="100" coord="100;0.00398" halign="1" valign="1" />
						<text text="1K" coord="1000;0.00398" halign="1" valign="1" />
						<text text="10K" coord="10000;0.00398" halign="1" valign="1" />
						
						<text text="+36" coord="10;63.09575" halign="1" valign="-1" />
						<text text="+24" coord="10;15.84893" halign="1" valign="-1" />
						<text text="+12" coord="10;3.98107" halign="1" valign="-1" />
						<text text="0" coord="10;1" halign="1" valign="1" />
						<text text="-12" coord="10;0.25119" halign="1" valign="1" />
						<text text="-24" coord="10;0.06310" halign="1" valign="1" />
						<text text="-36" coord="10;0.01585" halign="1" valign="1" />
						<text text="dB" coord="10;251.18861" halign="1" valign="-1" />
					</graph>
				</align>
				<hbox spacing="8">
					<label text="Bands" />
					<combo id="fsel" />
					<label text="Mode" />
					<combo id="slope" />
					<combo id="mode" />
					<align pad_right="4" hpos="1"  expand="true"><label text="SPECTRUM GRAPH" /></align>
				</hbox>
			</vbox>
			<vbox spacing="4">
				<group text="Signal" expand="true">
					<grid rows="6" cols="2" transpose="true">
						<label text="Input" />
						<knob id="g_in" expand="true" />
						<value id="g_in" />
						<label text="Output" expand="true" />
						<knob id="g_out" />
						<value id="g_out" />
						
						<cell rows="5">
							<meter id="sm" angle="1" type="rms_peak" height="128" logarithmic="true" min="0.01585" max="2" color="middle_channel" pad_left="2" pad_right="2" />
						</cell>
						<label text="Out" color="middle_channel" font_size="8" />
					</grid>
				</group>
				<group text="Analysis" expand="true">
					<vbox>
						<label text="FFT" halign="0" />
						<combo id="fft" fill="true" />
						
						<grid rows="3" cols="3" transpose="true" expand="true" >
							<label text="Reactivity" />
							<knob id="react" size="20" />
							<value id="react" />
							
							<label text="Shift" />
							<knob id="shift" size="20" />
							<value id="shift" />
						</grid>
					</vbox>
				</group>
			</vbox>
		</hbox>
		<hbox spacing="4">
			<group text="Bands" expand="true" visibility_id="fsel" visibility_key="0">
				<grid rows="5" cols="17">
					<label text="Hz" fill="true" halign="0" />

					<label text="16" />
					<label text="20" />
					<label text="25" />
					<label text="31.5" />
					<label text="40" />
					<label text="50" />
					<label text="63" />
					<label text="80" />
					<label text="100" />
					<label text="125" />
					<label text="160" />
					<label text="200" />
					<label text="250" />
					<label text="315" />
					<label text="400" />
					<label text="500" />
					
					<label text="Ctl" />
					<ui:for id="i" first="0" last="15">
						<grid rows="3" cols="2" fill="false">
							<button id="xe_${i}" led="true" size="12" color="yellow" />
							<label text="On" font_size="9" />
							<button id="xs_${i}" led="true" size="12" color="green" />
							<button id="xm_${i}" led="true" size="12" color="red" />
							<label text="S" font_size="9" />
							<label text="M" font_size="9" />
						</grid>
					</ui:for>
					
					<label text="Gain" />
					<ui:for id="i" first="0" last="15"><knob id="g_${i}"  size="20" scale_color="middle_channel" /></ui:for>
					
					<label text="(dB)" />
					<ui:for id="i" first="0" last="15"><value id="g_${i}" detailed="false" /></ui:for>
				</grid>
			</group>
			<group text="Bands" expand="true" visibility_id="fsel" visibility_key="1">
				<grid rows="5" cols="17">
					<label text="Hz" fill="true" halign="0" />

					<label text="630" />
					<label text="800" />
					<label text="1K" />
					<label text="1.25K" />
					<label text="1.6K" />
					<label text="2K" />
					<label text="2.5K" />
					<label text="3.15K" />
					<label text="4K" />
					<label text="5K" />
					<label text="6.3K" />
					<label text="8K" />
					<label text="10K" />
					<label text="12.5K" />
					<label text="16K" />
					<label text="20K" />
					
					<label text="Ctl" />
					<ui:for id="i" first="16" last="31">
						<grid rows="3" cols="2" fill="false">
							<button id="xe_${i}" led="true" size="12" color="yellow" />
							<label text="On" font_size="9" />
							<button id="xs_${i}" led="true" size="12" color="green" />
							<button id="xm_${i}" led="true" size="12" color="red" />
							<label text="S" font_size="9" />
							<label text="M" font_size="9" />
						</grid>
					</ui:for>
					
					<label text="Gain" />
					<ui:for id="i" first="16" last="31"><knob id="g_${i}"  size="20" scale_color="middle_channel" /></ui:for>
					
					<label text="(dB)" />
					<ui:for id="i" first="16" last="31"><value id="g_${i}" detailed="false" /></ui:for>
				</grid>
			</group>
		</hbox>
	</vbox>
</plugin>