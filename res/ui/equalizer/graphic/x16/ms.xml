<plugin resizable="false">
	<vbox spacing="4">
		<hbox spacing="4">
			<vbox>
				<align expand="true" pad_bottom="4">
					<graph width="640" height="340" expand="true" fill="true">
						<center hpos="-1" vpos="-1" visible="false" />
						
						<!-- Gray grid -->
						<ui:for id="f" first="20" last="90" step="10"><marker value="${f}" color="gray" basis="0" parallel="1" /></ui:for>
						<ui:for id="f" first="200" last="900" step="100"><marker value="${f}" color="gray" basis="0" parallel="1" /></ui:for>
						<ui:for id="f" first="2000" last="9000" step="1000"><marker value="${f}" color="gray" basis="0" parallel="1" /></ui:for>
						<marker value="20000" color="gray" basis="0" parallel="1" />
						
						<marker value="63.09575" color="gray" basis="1" parallel="0" /> <!-- +36 dB -->
						<marker value="3.98107" color="gray" basis="1" parallel="0" /> <!-- +12 dB -->
						<marker value="0.25119" color="gray" basis="1" parallel="0" /> <!-- -12 dB -->
						<marker value="0.01585" color="gray" basis="1" parallel="0" /> <!-- -36 dB -->
						
						<!-- Yellow grid -->
						<marker value="100" color="yellow" basis="0" parallel="1" /> <!-- 100 Hz -->
						<marker value="1000" color="yellow" basis="0" parallel="1" /> <!-- 1 kHz -->
						<marker value="10000" color="yellow" basis="0" parallel="1" /> <!-- 10 kHz -->
		
						<marker value="15.84893" color="yellow" basis="1" parallel="0" /> <!-- 24 dB -->
						<marker value="1" color="white" basis="1" parallel="0" /> <!-- 0 dB -->
						<marker value="0.06310" color="yellow" basis="1" parallel="0" /> <!-- -24 dB -->
		
						<!-- Amplitude graph -->
						<mesh id="fftg_m" width="2" color="middle_channel" visibility_id="fftv_m" />
						<mesh id="fftg_s" width="2" color="side_channel" visibility_id="fftv_s" />
						<mesh id="ag_m" width="3" color="middle_channel" fill="0.8" smooth="true" visibility_id="fftv_m" />
						<mesh id="ag_s" width="3" color="side_channel" fill="0.8" smooth="true" visibility_id="fftv_s" />
						
						<!-- Dots -->
						<dot hpos="14.62" vpos_id="gm_0" visibility_id="fvm_0" editable="true" color="middle_channel" />
						<dot hpos="17.10" vpos_id="gs_0" visibility_id="fvs_0" editable="true" color="side_channel" />
						<dot hpos="23.27" vpos_id="gm_1" visibility_id="fvm_1" editable="true" color="middle_channel" />
						<dot hpos="27.07" vpos_id="gs_1" visibility_id="fvs_1" editable="true" color="side_channel" />
						<dot hpos="36.74" vpos_id="gm_2" visibility_id="fvm_2" editable="true" color="middle_channel" />
						<dot hpos="42.86" vpos_id="gs_2" visibility_id="fvs_2" editable="true" color="side_channel" />
						<dot hpos="58.48" vpos_id="gm_3" visibility_id="fvm_3" editable="true" color="middle_channel" />
						<dot hpos="68.40" vpos_id="gs_3" visibility_id="fvs_3" editable="true" color="side_channel" />
						<dot hpos="92.83" vpos_id="gm_4" visibility_id="fvm_4" editable="true" color="middle_channel" />
						<dot hpos="107.72" vpos_id="gs_4" visibility_id="fvs_4" editable="true" color="side_channel" />
						<dot hpos="146.20" vpos_id="gm_5" visibility_id="fvm_5" editable="true" color="middle_channel" />
						<dot hpos="171.00" vpos_id="gs_5" visibility_id="fvs_5" editable="true" color="side_channel" />
						<dot hpos="232.70" vpos_id="gm_6" visibility_id="fvm_6" editable="true" color="middle_channel" />
						<dot hpos="270.74" vpos_id="gs_6" visibility_id="fvs_6" editable="true" color="side_channel" />
						<dot hpos="367.45" vpos_id="gm_7" visibility_id="fvm_7" editable="true" color="middle_channel" />
						<dot hpos="428.63" vpos_id="gs_7" visibility_id="fvs_7" editable="true" color="side_channel" />
						<dot hpos="584.80" vpos_id="gm_8" visibility_id="fvm_8" editable="true" color="middle_channel" />
						<dot hpos="683.99" vpos_id="gs_8" visibility_id="fvs_8" editable="true" color="side_channel" />
						<dot hpos="928.32" vpos_id="gm_9" visibility_id="fvm_9" editable="true" color="middle_channel" />
						<dot hpos="1077.22" vpos_id="gs_9" visibility_id="fvs_9" editable="true" color="side_channel" />
						<dot hpos="1462.01" vpos_id="gm_10" visibility_id="fvm_10" editable="true" color="middle_channel" />
						<dot hpos="1709.98" vpos_id="gs_10" visibility_id="fvs_10" editable="true" color="side_channel" />
						<dot hpos="2326.97" vpos_id="gm_11" visibility_id="fvm_11" editable="true" color="middle_channel" />
						<dot hpos="2707.39" vpos_id="gs_11" visibility_id="fvs_11" editable="true" color="side_channel" />
						<dot hpos="3674.49" vpos_id="gm_12" visibility_id="fvm_12" editable="true" color="middle_channel" />
						<dot hpos="4286.31" vpos_id="gs_12" visibility_id="fvs_12" editable="true" color="side_channel" />
						<dot hpos="5848.04" vpos_id="gm_13" visibility_id="fvm_13" editable="true" color="middle_channel" />
						<dot hpos="6839.91" vpos_id="gs_13" visibility_id="fvs_13" editable="true" color="side_channel" />
						<dot hpos="9283.18" vpos_id="gm_14" visibility_id="fvm_14" editable="true" color="middle_channel" />
						<dot hpos="10772.17" vpos_id="gs_14" visibility_id="fvs_14" editable="true" color="side_channel" />
						<dot hpos="14620.09" vpos_id="gm_15" visibility_id="fvm_15" editable="true" color="middle_channel" />
						<dot hpos="17099.76" vpos_id="gs_15" visibility_id="fvs_15" editable="true" color="side_channel" />
						
						<!-- Boundaries -->
						<marker value="251.18861" color="white" basis="1" parallel="0" /> <!-- +48 dB -->
						<marker value="24000" color="white" basis="0" parallel="1" />
						
						<!-- Axis -->
						<axis min="10" max="24000" color="white" angle="0.0" logarithmic="true" />
						<axis min="0.00398" max="251.18861" color="white" angle="0.5" logarithmic="true" /> <!-- -48..+48 dB -->
						
						<!-- Text -->
						<text text="Hz" coord="10;0.00398" halign="1" valign="1" />
						<text text="100" coord="100;0.00398" halign="1" valign="1" />
						<text text="1K" coord="1000;0.00398" halign="1" valign="1" />
						<text text="10K" coord="10000;0.00398" halign="1" valign="1" />
						
						<text text="+36" coord="10;63.09575" halign="1" valign="-1" />
						<text text="+24" coord="10;15.84893" halign="1" valign="-1" />
						<text text="+12" coord="10;3.98107" halign="1" valign="-1" />
						<text text="0" coord="10;1" halign="1" valign="1" />
						<text text="-12" coord="10;0.25119" halign="1" valign="1" />
						<text text="-24" coord="10;0.06310" halign="1" valign="1" />
						<text text="-36" coord="10;0.01585" halign="1" valign="1" />
						<text text="dB" coord="10;251.18861" halign="1" valign="-1" />
					</graph>
				</align>
				<hbox spacing="8">
					<label text="Bands" />
					<combo id="fsel" />
					<label text="Mode" />
					<combo id="slope" />
					<combo id="mode" />
					<align hpos="1" expand="true">
						<hbox spacing="8">
							<button id="fftv_m" size="16" color="middle_channel" led="true" />
							<label text="Mid" />
							<button id="fftv_s" size="16" color="side_channel" led="true" />
							<label text="Side" />
							<button id="lstn" size="16" color="yellow" led="true" />
							<label text="Listen" />
						</hbox>
					</align>
					<align pad_right="4" hpos="1"  expand="true"><label text="SPECTRUM GRAPH" /></align>
				</hbox>
			</vbox>
			<vbox spacing="4">
				<group text="Signal" expand="true">
					<grid rows="6" cols="2" transpose="true">
						<label text="Input" />
						<knob id="g_in" expand="true" />
						<value id="g_in" />
						<label text="Output" expand="true" />
						<knob id="g_out" />
						<value id="g_out" />
						
						<label text="Balance" expand="true" />
						<knob id="bal" balance="0.5" scale_color="green" />
						
						<cell rows="4">
							<vbox>
								<grid rows="3" cols="2" visibility_id="lstn" visibility_key="0">
									<meter id="sml" angle="1"  height="80" logarithmic="true" min="0.01585" max="2" color="left_channel" pad_left="2" pad_right="2" />
									<meter id="smr" angle="1"  height="80" logarithmic="true" min="0.01585" max="2" color="right_channel" pad_left="2" pad_right="2" />
									<label text="L" color="left_channel" font_size="8" />
									<label text="R" color="right_channel" font_size="8" />
								</grid>
								<grid rows="3" cols="2" visibility_id="lstn" visibility_key="1">
									<meter id="sml" angle="1"  height="80" logarithmic="true" min="0.01585" max="2" color="middle_channel" pad_left="2" pad_right="2" />
									<meter id="smr" angle="1"  height="80" logarithmic="true" min="0.01585" max="2" color="side_channel" pad_left="2" pad_right="2" />
									<label text="M" color="middle_channel" font_size="8" />
									<label text="S" color="side_channel" font_size="8" />
								</grid>
								<cell cols="2"><value id="bal" font_size="8" same_line="true" /></cell>
							</vbox>
						</cell>
					</grid>
				</group>
				<group text="Analysis" expand="true">
					<vbox>
						<label text="FFT" halign="0" />
						<combo id="fft" fill="true" />
						
						<grid rows="3" cols="3" transpose="true" expand="true" >
							<label text="Reactivity" />
							<knob id="react" size="20" />
							<value id="react" />
							
							<label text="Shift" />
							<knob id="shift" size="20" />
							<value id="shift" />
						</grid>
					</vbox>
				</group>
			</vbox>
		</hbox>
		<hbox spacing="4">
			<group text="Bands Middle" expand="true" visibility_id="fsel" visibility_key="0">
				<grid rows="5" cols="17">
					<label text="Hz" fill="true" halign="0" />
					<label text="16" />
					<label text="25" />
					<label text="40" />
					<label text="63" />
					<label text="100" />
					<label text="160" />
					<label text="250" />
					<label text="400" />
					<label text="630" />
					<label text="1K" />
					<label text="1.6K" />
					<label text="2.5K" />
					<label text="4K" />
					<label text="6.3K" />
					<label text="10K" />
					<label text="16K" />
					
					<label text="Ctl" />
					<ui:for id="i" first="0" last="15">
						<grid rows="3" cols="2" fill="false">
							<button id="xem_${i}" led="true" size="12" color="yellow" />
							<label text="On" font_size="9" />
							<button id="xsm_${i}" led="true" size="12" color="green" />
							<button id="xmm_${i}" led="true" size="12" color="red" />
							<label text="S" font_size="9" />
							<label text="M" font_size="9" />
						</grid>
					</ui:for>
					
					<label text="Gain" />
					<ui:for id="i" first="0" last="15"><knob id="gm_${i}"  size="20" scale_color="middle_channel" /></ui:for>
					
					<label text="(dB)" />
					<ui:for id="i" first="0" last="15"><value id="gm_${i}" detailed="false" /></ui:for>
				</grid>
			</group>
			<group text="Bands Side" expand="true" visibility_id="fsel" visibility_key="1">
				<grid rows="5" cols="17">
					<label text="Hz" fill="true" halign="0" />
					<label text="16" />
					<label text="25" />
					<label text="40" />
					<label text="63" />
					<label text="100" />
					<label text="160" />
					<label text="250" />
					<label text="400" />
					<label text="630" />
					<label text="1K" />
					<label text="1.6K" />
					<label text="2.5K" />
					<label text="4K" />
					<label text="6.3K" />
					<label text="10K" />
					<label text="16K" />
					
					<label text="Ctl" />
					<ui:for id="i" first="0" last="15">
						<grid rows="3" cols="2" fill="false">
							<button id="xes_${i}" led="true" size="12" color="yellow" />
							<label text="On" font_size="9" />
							<button id="xss_${i}" led="true" size="12" color="green" />
							<button id="xms_${i}" led="true" size="12" color="red" />
							<label text="S" font_size="9" />
							<label text="M" font_size="9" />
						</grid>
					</ui:for>
					
					<label text="Gain" />
					<ui:for id="i" first="0" last="15"><knob id="gs_${i}"  size="20" scale_color="side_channel" /></ui:for>
					
					<label text="(dB)" />
					<ui:for id="i" first="0" last="15"><value id="gs_${i}" detailed="false" /></ui:for>
				</grid>
			</group>
		</hbox>
	</vbox>
</plugin>