<plugin width="700" height="128" resizable="false">
	<hbox size="2" border="0">
		<align hpos="0.5" vpos="0.5" pad_left="8" pad_right="8">
			<vbox>
				<vbox>
					<label text="Bypass" />
					<switch id="bypass" angle="1" />
					<led id="bypass" color="red" size="8" />
				</vbox>
				<vbox size="3">
					<label text="Output" />
					<knob id="g_out" size="24" />
					<value id="g_out" />
				</vbox>
			</vbox>
		</align>
		<hbox>
			<vbox proportional="true">
				<group text="Signal L" expand="true">
					<vbox border="0">
						<hbox border="0">	
							<vbox border="0">
								<label text="Dry amount" />
								<knob id="dry_l" />
								<value id="dry_l" />
							</vbox>
							<vbox border="0">
								<label text="Wet amount" />
								<knob id="wet_l" />
								<value id="wet_l" />
							</vbox>
						</hbox>
						<align hpos="0.5" vpos="0.5" border="0" expand="true">
							<hbox border="0">
								<button id="mode_l" />
								<label text="Mode" />
							</hbox>
						</align>
					</vbox>
				</group>
				<group text="Signal R" expand="true">
					<vbox border="0">
						<hbox border="0">	
							<vbox border="0">
								<label text="Dry amount" />
								<knob id="dry_r" />
								<value id="dry_r" />
							</vbox>
							<vbox border="0">
								<label text="Wet amount" />
								<knob id="wet_r" />
								<value id="wet_r" />
							</vbox>
						</hbox>
						<align hpos="0.5" vpos="0.5" border="0" expand="true">
							<hbox border="0">
								<button id="mode_r" />
								<label text="Mode" />
							</hbox>
						</align>
					</vbox>
				</group>
			</vbox>
			<vbox proportional="true">
				<group text="Samples L" expand="true">
					<vbox border="0">
						<label text="Samples" />
						<knob id="samp_l" />
						<value id="samp_l" />
						
						<align hpos="0.5" vpos="0.5" border="0" expand="true">
							<hbox border="0">
								<led id="mode_l" key="0" />
								<label text="Active" />
							</hbox>
						</align>
					</vbox>
				</group>
				<group text="Samples R" expand="true">
					<vbox border="0">
						<label text="Samples" />
						<knob id="samp_r" />
						<value id="samp_r" />
						
						<align hpos="0.5" vpos="0.5" border="0" expand="true">
							<hbox border="0">
								<led id="mode_r" key="0" />
								<label text="Active" />
							</hbox>
						</align>
					</vbox>
				</group>
			</vbox>
			<vbox proportional="true">
				<group text="Distance L" expand="true">
					<vbox>
						<hbox border="0">
							<vbox border="0">
								<label text="Meters" />
								<knob id="m_l" />
								<value id="m_l" />
							</vbox>
							<vbox border="0">
								<label text="Centimeters" />
								<knob id="cm_l" />
								<value id="cm_l" />
							</vbox>
							<vbox border="0">
								<label text="Temperature" />
								<knob id="t_l" balance="0.5" />
								<value id="t_l" />
							</vbox>
						</hbox>
						<align hpos="0.5" vpos="0.5" border="0" expand="true">
							<hbox border="0">
								<led id="mode_l" key="1" />
								<label text="Active" />
							</hbox>
						</align>
					</vbox>
				</group>
				<group text="Distance R" expand="true">
					<vbox>
						<hbox border="0">
							<vbox border="0">
								<label text="Meters" />
								<knob id="m_r" />
								<value id="m_r" />
							</vbox>
							<vbox border="0">
								<label text="Centimeters" />
								<knob id="cm_r" />
								<value id="cm_r" />
							</vbox>
							<vbox border="0">
								<label text="Temperature" />
								<knob id="t_r" balance="0.5" />
								<value id="t_r" />
							</vbox>
						</hbox>
						<align hpos="0.5" vpos="0.5" border="0" expand="true">
							<hbox border="0">
								<led id="mode_r" key="1" />
								<label text="Active" />
							</hbox>
						</align>
					</vbox>
				</group>
			</vbox>
			<vbox proportional="true">
				<group text="Time L" expand="true">
					<vbox>
						<label text="Delay" />
						<knob id="time_l" />
						<value id="time_l" />
						
						<align hpos="0.5" vpos="0.5" border="0" expand="true">
							<hbox border="0">
								<led id="mode_l" key="2" />
								<label text="Active" />
							</hbox>
						</align>
					</vbox>
				</group>
				<group text="Time R" expand="true">
					<vbox>
						<label text="Delay" />
						<knob id="time_r" />
						<value id="time_r" />
						
						<align hpos="0.5" vpos="0.5" border="0" expand="true">
							<hbox border="0">
								<led id="mode_r" key="2" />
								<label text="Active" />
							</hbox>
						</align>
					</vbox>
				</group>
			</vbox>
			<vbox proportional="true">
				<group text="Monitoring L" expand="true">
					<grid rows="5" cols="2" hspacing="1" vspacing="1">
						<label />
						<label text="Value" />
		
						<label text="Time (ms)" fill="true" halign="0" />
						<indicator id="d_t_l" format="f6.2!" text_color="green" />
						
						<label text="Samples (samp)" fill="true" halign="0" />
						<indicator id="d_s_l" format="i6" text_color="green" /> 
						
						<label text="Distance (cm)" fill="true" halign="0" />
						<indicator id="d_d_l" format="f6.1!" text_color="green" />
						
						<cell cols="2">
							<label text="LEFT CHANNEL" />
						</cell>
					</grid>
				</group>
				<group text="Monitoring R" expand="true">
					<grid rows="5" cols="2" hspacing="1" vspacing="1">
						<label />
						<label text="Value" />
		
						<label text="Time (ms)" fill="true" halign="0" />
						<indicator id="d_t_r" format="f6.2!" text_color="green" />
						
						<label text="Samples (samp)" fill="true" halign="0" />
						<indicator id="d_s_r" format="i6" text_color="green" /> 
						
						<label text="Distance (cm)" fill="true" halign="0" />
						<indicator id="d_d_r" format="f6.1!" text_color="green" />
						
						<cell cols="2">
							<label text="RIGHT CHANNEL" />
						</cell>
					</grid>
				</group>
			</vbox>
		</hbox>

	</hbox>
</plugin>